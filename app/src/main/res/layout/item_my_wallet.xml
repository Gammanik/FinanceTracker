<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/wallet_cardView"
    android:layout_width="match_parent"
    android:layout_height="126dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/colorWalletCard"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/my_wallet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/my_wallet_icon"
            android:layout_marginStart="16dp"
            android:text="Tinkoff black~"
            android:textColor="#000"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/my_wallet_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/wallet_wlcard" />

        <TextView
            android:id="@+id/my_wallet_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="infinity$"
            android:textColor="@color/colorWalletAmount"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_chosen_currency"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/my_wallet_icon"
            android:layout_marginEnd="12dp"
            android:text="USD" />
    </RelativeLayout>

</android.support.v7.widget.CardView>

