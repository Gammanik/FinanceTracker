<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/tp_category_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:contentDescription="operation description"
            app:srcCompat="@drawable/category_freelance" />

        <TextView
            android:id="@+id/tp_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tp_category_img"
            android:layout_alignParentStart="true"
            android:layout_marginStart="62dp"
            android:lines="1"
            android:maxWidth="180dp"
            android:text="some operation"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tp_amount"
            android:layout_below="@+id/tp_category_img">

            <TextView
                android:id="@+id/tp_wallet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="some bill" />

            <ImageView
                android:id="@+id/tp_wallet_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/wallet_wlcard" />

        </LinearLayout>

        <TextView
            android:id="@+id/tp_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="17dp"
            android:text="infinity â‚½"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="22sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>