<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_amount"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:hint="@string/hint_enter_amount"
            android:textColorHint="@drawable/selector_hint"
            android:inputType="number"
            app:met_primaryColor="@color/colorPrimary"
            app:met_baseColor="@color/colorPrimaryDark"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="@string/hint_enter_amount"
            tools:textSize="30sp" />

        <TextView
            android:id="@+id/tv_currency_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="$"
            android:textSize="20sp" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_buttons"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btn_choose_wallet"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            app:civ_border_color="@color/colorImgBorder"
            app:civ_border_width="2dp"
            app:srcCompat="@drawable/wallet_wlcard" />

        <TextView
            android:id="@+id/choose_wallet_text"
            android:layout_width="@dimen/icon_size"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_choose_wallet"
            android:layout_marginTop="0dp"
            android:lines="1"
            android:text="choose wallet"
            android:textAlignment="center"
            android:textSize="12sp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btn_choose_date"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_centerHorizontal="true"
            app:civ_border_color="@color/colorImgBorder"
            app:civ_border_width="2dp"
            app:srcCompat="@drawable/btn_calendar" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btn_choose_category"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_alignParentEnd="true"
            app:civ_border_color="@color/colorImgBorder"
            app:civ_border_width="2dp"
            app:srcCompat="@drawable/category_travel" />

        <TextView
            android:id="@+id/category_text"
            android:layout_width="@dimen/icon_size"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/btn_choose_wallet"
            android:lines="1"
            android:text="Other"
            android:textAlignment="center"
            android:textSize="12sp" />

    </RelativeLayout>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_operation_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:gravity="center"
        android:hint="comment"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_buttons" />

    <Button
        android:id="@+id/btn_save_operation"
        android:layout_width="44dp"
        android:layout_height="42dp"
        android:background="@drawable/shape_rounded_button"
        android:text=">"
        android:textColor="@color/colorBtnBorder"
        tools:layout_editor_absoluteX="273dp"
        tools:layout_editor_absoluteY="38dp" />




</android.support.constraint.ConstraintLayout>